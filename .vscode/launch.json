    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Debug (Prod)",
            "preLaunchTask": "cd api && npm: build",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/src/test/**"
            ],
            "program": "${workspaceFolder}/api/dist/bin/server.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js",
                "!**/node_modules/**"
            ]
        }
    ]
}